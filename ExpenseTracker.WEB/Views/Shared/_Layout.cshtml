<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />

    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Themes/Base/minified/jquery-ui.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/DataTables-1.9.4/media/css/jquery.dataTables.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery.ui.timepicker.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery.timeentry.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.10.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.plugin.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.blockUI.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/DataTables-1.9.4/media/js/jquery.dataTables.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jQuery.dataTables.columnFilter.HeadBeforeFix.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.6.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.ui.timepicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.timeentry.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/autoNumeric/autoNumeric-1.9.18.min.js")" type="text/javascript"></script>

    <link href="@Url.Content("~/Content/ExpenseTracker.WEB/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/ExpenseTracker.WEB/showModal.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ExpenseTracker.WEB/loadDiv.js")" type="text/javascript"></script>

    @{
        var loggedInUrl = Url.Action("_LoggedInDisplay", "Account");
    }
    <script type="text/javascript">
        // Make sure IE doesn't try to cache the dynamic panes
        $.ajaxSetup({ cache: false });

        $(document).ready(function() {
            // refresh the pane because login and off will hit this...
            loadDivWithBlockTransparent('loggedInDiv', '@loggedInUrl');
        });
    </script>
</head>
<body>
    <div class="wrapper">
        <div class="page">
            <header>
                <div style="height: 55px;">
                    <div id="title" style="float: left;">
                        <a href="@Url.Action("Index", "Home")">
                            <h1 class="rightAligned" style="margin-left: 25px;">Expense Tracker</h1>
                        </a>
                    </div>
                    <div id="loggedInDiv" style="float: right;">
                    </div>
                </div>
            </header>
            <section id="main">
                <div id="mainDiv">
                    @RenderBody()
                </div>
            </section>

        </div>
        <div class="pushForFooter" />
    </div>
    <div id="footer">
        Copyright (c) Think Tank, Inc. 2014 - All Rights Reserved. <a target="_blank" href="http://www.getthinktank.com">http://www.getthinktank.com</a>
    </div>
</body>
</html>
